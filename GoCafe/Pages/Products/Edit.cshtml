@page
@model GoCafe.Pages.Products.EditProduct
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Edit";
}
@if(HttpContext.Session.GetString("UserRole")=="Quản trị viên")
{
<h1>Chỉnh sửa</h1>

<h4>Thực đơn</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label"></label>
                <input asp-for="Product.ProductName" class="form-control" />
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId"  asp-items="Model.CategoryIndexVM.Genres" class="form-control" >
                </select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Trở Lại danh sách</a>
</div>
}
else
{
    Layout=null;
    <h1>Bạn không đủ yêu cầu để truy cập</h1>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
