@page
@model GoCafe.Pages.Products.DetailsModel
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Thông tin";
}
@if(HttpContext.Session.GetString("UserRole")=="Quản trị viên")
{
<h1>Thông tin</h1>

<div>
    <h4>Thực đơn</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price) VNĐ
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.CategoryId)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Product.Id">Chỉnh sửa</a> |
    <a asp-page="./Index">Trở lại danh sách</a>
</div>
}
else
{
    Layout=null;
    <h1>Bạn không đủ điều kiện để truy cập</h1>
}
